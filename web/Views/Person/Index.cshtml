﻿@using web.Models;
@model IEnumerable < Person >


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Person Index</h2>

<div>
	<table>
		<thead>
			<tr>
				<td>First Name</td>
				<td>Last Name</td>
				<td>View</td>
				<td>Edit</td>
				<td>Delete</td>
			</tr>
		</thead>
		<tbody>
		@foreach(Person p in @Model)
		{
			<tr>
				<td>@p.FirstName</td>
				<td>@p.LastName</td>
				<td>@Html.ActionLink( "view", "Details", "Person", new { Id = p.Id }, null)</td>
				<td>@Html.ActionLink( "edit", "Details", "Person", new { Id = p.Id }, null)</td>
				<td>@Html.ActionLink( "edit", "Details", "Person", new { Id = p.Id }, null)</td>
			</tr>
		}
			
		</tbody>
	</table>

</div>



<script>
 $(document).ready(function () {
 	 	$("#menu li").removeClass("active");
 	 	$('#person').addClass('active');
    });
</script>
